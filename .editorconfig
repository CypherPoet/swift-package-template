#####################
# defaults
#####################

[*]
charset = utf-8

# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# Prefer spaces -- two of them
indent_style = space
indent_size = 2

trim_trailing_whitespace = true


#####################
# Swift
#####################

[*.swift]

indent_size = 4
